{
  "compilerOptions": {   
  "target": "es2016",
  "module": "commonjs",
  "rootDir": "./",
  "baseUrl": "./src",
  "paths": {
       "@modules/*": ["modules/*"],
       "@config/*": ["config/*"],
       "@shared/*": ["shared/*"],
       "@errors/*": ["errors/*"],
       "@utils/*": ["utils/*"],
   },
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "resolveJsonModule": true,
  }
}